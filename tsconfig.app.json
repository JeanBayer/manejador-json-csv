{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@duplicate-complex-marker/*": ["./src/pages/duplicate-complex-marker/*"],
      "@format-others-cashback/*": ["./src/pages/format-others-cashback/*"],
      "@duplicate-marker/*": ["./src/pages/duplicate-marker/*"],
      "@json-csv-converter/*": ["./src/pages/json-csv-converter/*"],
      "@match-logic/*": ["./src/pages/match-logic/*"],
      "@prueba/*": ["./src/pages/prueba/*"],
      "@string-converter/*": ["./src/pages/string-converter/*"],
      "@calculate-withdrawal-status/*": [
        "./src/pages/calculate-withdrawal-status/*"
      ],
      "@split-data/*": ["./src/pages/split-data/*"]
    }
  },
  "include": ["src"]
}
